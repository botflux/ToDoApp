{% extends "layout_panel_1.html.twig" %}
{% block title %}Articles{% endblock %}

{% block dashboard_left %}

    <div class="card">
        <div class="list-group list-group-flush">
            <span class="list-group-item bg-light">Filtres</span>
            <a href="{{ path('home') }}" class="list-group-item list-group-item-action {{ filter == 'all'? 'active': '' }}">Tout les articles</a>
            <a href="{{ path('home', {'articles': 'my'}) }}" class="list-group-item list-group-item-action {{ filter == 'my'? 'active': '' }}">Mes articles</a>
        </div>
    </div>

    <div class="todoapp-m-b"></div>

    <div class="card">
        <div class="list-group list-group-flush">
            <span class="list-group-item bg-light">Actions</span>
            <a href="{{ path('article_create') }}" class="list-group-item list-group-item-action">Nouveau article</a>
        </div>
    </div>

{% endblock %}

{% block content %}
    {% for article in articles %}
        <div class="card todoapp-margin-bottom">
            <div class="card-body">
                <h3 class="card-title">{{ article.title }}</h3>
                <hr>
                <p class="card-text">{{ article.content }}</p>
                <small class="text-muted">{{ article.date }}</small>
            </div>
            <div class="card-footer">
                <a href="{{ path('article', {'id': article.id}) }}" class="btn btn-secondary">Voir l'article</a>
            </div>
        </div>
    {% else %}
        <div class="m-1">
            <h3 class="display-4">Pas encore d'article</h3>
            <p class="lead">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis eu mauris mi. Nunc tempor condimentum purus, in mollis ex porta et. Nam molestie elit interdum eleifend luctus.</p>
            <a class="btn btn-secondary" href="{{ path('article_create') }}">Cr√©er le premier article</a>
        </div>
    {% endfor %}

{% endblock %}