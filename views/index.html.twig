{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-1">Bienvenue sur Todo app</h1>
            <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Harum, necessitatibus, repellat. Beatae consequuntur incidunt itaque iure laboriosam magnam molestias nihil nulla, reiciendis sapiente unde, voluptate. Amet ipsa sunt tenetur vero.</p>
            <a href="#" class="btn btn-primary btn-lg">En savoir plus</a>
        </div>
    </div>

    <div class="container">
        <h3>Vos slides</h3>
        <hr>
        {% for article in userArticles %}
            <div class="card todoapp-m-b">
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <p class="card-text">{{ article.content }}</p>
                    <small class="text-muted">{{ article.date }}</small>
                </div>
            </div>
        {% else %}
            <p>Vous n'avez pas encore créé de slides.</p>
        {% endfor %}

        <div class="todoapp-margin"></div>
        <h3>Toutes les slides</h3>
        <hr>
        {% for article in allArticles %}
            <div class="card todoapp-m-b">
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <p class="card-text">{{ article.content }}</p>
                    <small class="text-muted">{{ article.date }}</small>
                </div>
            </div>
        {% else %}
            <p>Aucun article créé</p>
        {% endfor %}
    </div>
{% endblock %}