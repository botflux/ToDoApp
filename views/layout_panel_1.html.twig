<!doctype html>
<html lang="fr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>ToDoApp - {% block title %}{% endblock %}</title>
    <!-- Google icons font -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css', 'bootstrap') }}">
    <!-- My css -->
    <link rel="stylesheet" href="{{ asset('todoapp.css', 'css') }}">
    <!-- Google icon size style -->
    <link rel="stylesheet" href="{{ asset('googleiconstyle.css', 'css') }}">
</head>
<body>

<nav class="navbar navbar-dark navbar-expand-lg bg-dark">
    <a href="{{ path('home') }}" class="navbar-brand">Todo</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse"  data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon">
        </span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a href="{{ path('home') }}" class="nav-link">Home</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Votre compte
                </button>

                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <h5 class="dropdown-header">Bonjour {{ app.user.username }},</h5>
                    <a href="{{ path('settings') }}" class="dropdown-item">Parametres</a>
                    <div class="dropdown-divider"></div>
                    <a href="{{ path('logout') }}" class="dropdown-item">Se deconnecter</a>
                </div>
            </div>
        </ul>
    </div>
</nav>

<div class="todo__margin-bottom-2"></div>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            {% block dashboard_left %}{% endblock %}
        </div>
        <div class="col-md-9">
            {% block content %} {% endblock %}
        </div>
    </div>
</div>

<footer class="todo__footer">
    <div class="container footer-container">

    </div>
</footer>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
<script src="{{ asset('js/bootstrap.min.js', 'bootstrap') }}"></script>
</body>
</html>